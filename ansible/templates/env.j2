APP_NAME={{ app.name }}
APP_ENV={{ deploy_env | lower }}
APP_KEY=base64:{{ environments[deploy_env | lower].app_key }}
APP_DEBUG={{ app.environments[deploy_env | lower].debug }}
APP_URL=http://{{ inventory_hostname }}

LOG_CHANNEL=stack

DB_CONNECTION={{ environments[deploy_env | lower].db.connection }}
DB_HOST={{ environments[deploy_env | lower].db.host }}
DB_PORT={{ environments[deploy_env | lower].db.port }}
DB_DATABASE={{ environments[deploy_env | lower].db.database }}
DB_USERNAME={{ environments[deploy_env | lower].db.username }}
DB_PASSWORD={{ environments[deploy_env | lower].db.password }}

BROADCAST_DRIVER=log
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_DRIVER=sync

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

CIVI_HOST={{ civiClient[ deploy_env | lower ].host_url }}
CIVI_INTEGRATION={{ civiClient[ deploy_env | lower ].integration }}
CIVI_SITE_KEY={{ civiClient[ deploy_env | lower ].site_key }}
CIVI_USER_KEY={{ civiClient[ deploy_env | lower ].user_key }}

VOTERLISTREGISTRY_HOST={{ voterListRegistry[ deploy_env | lower ].host_url }}
VOTERLISTREGISTRY_USERNAME={{ voterListRegistry[ deploy_env | lower ].username }}
VOTERLISTREGISTRY_PASSWORD={{ voterListRegistry[ deploy_env | lower ].password }}
